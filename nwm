#include<stdio.h>
#include<stdlib.h>
#include<string.h>

char * dynamiczna(char * lancuch)
{
	int size = strlen(lancuch) +1;
	char * dynamiczna;
	dynamiczna=(char *)malloc(size  * sizeof(* dynamiczna));
	strcpy(dynamiczna,lancuch);
	return dynamiczna;
}
int main()
{
	int i;
	char * tablica;
	char * optymalnie;
	tablica = (char *)malloc(100 * sizeof *tablica);
	printf("Napisz cos: ");
	scanf("%s",tablica);
	optymalnie = dynamiczna(tablica);
	free(tablica);
	i = sizeof(optymalnie);
	printf("%s\n%d",optymalnie,i);
	free(optymalnie);
	return 0;
}
